{
	"compilerOptions": {
		"lib": [
			"es5",
			"es6"
		],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./build",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": false,
		"esModuleInterop": true,
    "skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "tests/**/*"
  ]
}
